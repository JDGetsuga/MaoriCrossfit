<p id="notice"><%= notice %></p>

<h1>Listing Lessons</h1>

<table>
  <thead>
    <tr>
      <th>Fechaactual</th>
      <th>User</th>
      <th>Horainicio</th>
      <th>Horafin</th>
      <th>Service</th>
      <th>Capacidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.fechaactual %></td>
        <td><%= lesson.user %></td>
        <td><%= lesson.horainicio %></td>
        <td><%= lesson.horafin %></td>
        <td><%= lesson.service %></td>
        <td><%= lesson.capacidad %></td>
        <td><%= link_to 'Show', lesson %></td>
        <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
        <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

